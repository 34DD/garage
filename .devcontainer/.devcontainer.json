{
  "name": "Spring Boot Maven Dev",
  "image": "mcr.microsoft.com/devcontainers/java:23",
  "postCreateCommand": "./mvnw clean install",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-spring-boot",
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot-dev-pack"
      ]
    }
  },
  "forwardPorts": [8081],
  "features": {
    "git": "latest",
    "ghcr.io/devcontainers/features/java:1": {
      "version": "23"
    },
    "ghcr.io/devcontainers/features/maven:1": {}
  }
}

